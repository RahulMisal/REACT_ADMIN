<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>About Info List</title>
</head>
<body>

<div class="container-fluid mt-4">
    <h3 class="text-center mb-3 alert alert-primary">About Info List</h3>
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Action</th>
                    <th>SR.NO</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Photo</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(about) && about.length > 0) { %>
                    <% about.map((row, i) => { %>
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/edit_about_info/<%- row.about_id %>" class="btn btn-sm btn-warning mx-1">
                                    ✏️
                                </a>
                                <a href="/admin/delete_about_info/<%- row.about_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are You Sure....?')">
                                    ❌
                                </a>
                            </td>
                            <td><%- i + 1 %></td>
                            <td><%- row.title %></td>
                            <td><%- row.description %></td>
                            <td><%- row.type %></td>
                            <td>
                                <img src="/uploads/<%- row.photo %>" alt="Photo" class="img-thumbnail" width="300px">
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center text-muted">No records found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>


